<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<constant name="struts.devModel" value="true"></constant>
	<constant name="struts.objectFactory" value="spring"></constant>

	<package name="liyuhao" extends="struts-default">
		<global-results>
			<result name="login">/login.jsp</result>
		</global-results>
		<action name="login" class="com.liyuhao.action.AdminAction"
			method="login">
			<result name="success">/success.jsp</result>
		</action>
	</package>

	<package name="admin1" namespace="/admin1" extends="json-default">
		<action name="login1" class="com.liyuhao.action.AdminAction"
			method="login1">
			<result name="success" type="json">
				<param name="root">result</param>
			</result>
			<!-- 直接拦截所有异常 然后返回封装了异常信息的json 其他的给浏览器做处理。 -->
			<exception-mapping result="success" exception="java.lang.Exception"></exception-mapping>
		</action>
	</package>

	<package name="admin2" namespace="/admin2" extends="struts-default">
		<action name="login2" class="com.liyuhao.action.AdminAction"
			method="login2"></action>
	</package>

</struts>    
